<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/rl_klik"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:layout_marginRight="8dp"
        android:foreground="?selectableItemBackground">

        <ImageView
            android:id="@+id/gambar_roti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nama_roti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gambar_roti"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-95dp"
            android:layout_toEndOf="@+id/gambar_roti"
            android:text="Roti Yums"
            android:textStyle="bold"
            android:textColor="#46321A"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/desc_roti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_roti"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/gambar_roti"
            android:text="roti yang yummy"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/harga_roti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_roti"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/gambar_roti"
            android:text="Rp. xxx"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>